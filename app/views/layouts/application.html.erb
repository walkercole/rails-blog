<!DOCTYPE html>
<html>
  <head>
    <title>BlogRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
      body { font-family: sans-serif; }
    </style>
  </head>

  <body>
      <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
    <% end -%>
    <br />
    <a href="/"><button>Home</button></a><br /><br />
  <% if current_user %>
    logged in as <%= current_user.username %><br />
  <button><%= link_to "Profile", current_user %></button>
  <button><%= link_to "Logout", sessions_path, method: :delete %></button>
    <% else %>
      <fieldset>
        <legend>Log In</legend>
        <%= form_tag sessions_path do%>
          <%= label_tag :email %>
          <%= text_field_tag :email, params[:email] %>
          <%= label_tag :password %>
          <%= password_field_tag :password %>
          <%= submit_tag "Sign in" %>
        <% end %>
      </fieldset>
      <br />
  <% end %>
  <% if !current_user %>
  New? <%= link_to "Create User", new_user_path %> here!<br />
  <% end %>
    <%= yield %>
  </body>
</html>
